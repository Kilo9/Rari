<section id="list">

  <h1>'Raris on the Market</h1>

  <% @cars.each do |car| %>
    <section class="car">
       
    </section>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
        <th>Desc</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.price %></td>
          <td><%= car.desc %></td>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'List your own!', new_car_path %>

</section>
