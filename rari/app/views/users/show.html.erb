<section id='user_show'>
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>

  <% if @user.cars %>
  <section id='user_cars'>
    <% @user.cars.each do |car| %> 
      <%= link_to car_path(car)  do %>
        <%= image_tag('uploads/' + car.image, class: 'car_thumb') %>
      <% end %>
    <% end %>
  </section>
  <% end %>

  <footer>
    <% if logged_in? && current_user.id == @user.id %>
      <%= link_to 'Edit', edit_user_path(@user) %>
    <% end %>
    <%= link_to 'Back', users_path %>
    <% if logged_in? && current_user.id == @user.id %>
      <%= link_to 'Delete Account', current_user, :method => 'delete', data: {confirm: 'Are you sure? All listings will be deleted as well.'}, id: 'delete' %>
    <% end %>
  </footer>
</section>
